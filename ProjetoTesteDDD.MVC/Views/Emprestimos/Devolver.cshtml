@model ProjetoTesteDDD.MVC.ViewModels.EmprestimoViewModel

@{
    ViewBag.Title = "Devolver";
}

<h2>Devolver</h2>

<h3>Você tem certeza que deseja devolver esse empréstimo?</h3>
<div>
    <h4>EmprestimoViewModel</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClienteId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClienteNome)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.MaterialId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaterialDescricao)
        </dd>

        <dt>
            @Html.DisplayName("Devolver em")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataDevolverDescricao)
        </dd>

        <dt>
            @Html.DisplayName("Devolvido em")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DataDevolucaoDescricao)
        </dd>

        <dt>
            @Html.DisplayName("Devolvido?")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DevolvidoDescricao)
        </dd>

    </dl>
    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (Model.DevolvidoDescricao != "Sim")
            {
                @:<input type="submit" value="Devolver" class="btn btn-default" /> |
            }
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
